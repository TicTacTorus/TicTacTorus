@page "/lobbies" 
@using TicTacTorus.Source
@using System.Net
<!-- Maybe another tag for the lobbies site?? Open for possible solutions -->

<div class="lobbies-grid my-5">
    <button class="btn-back" onclick="location.href ='/';">
        <svg class="bi bi-arrow-left" width="2em" height="2em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M5.854 4.646a.5.5 0 010 .708L3.207 8l2.647 2.646a.5.5 0 01-.708.708l-3-3a.5.5 0 010-.708l3-3a.5.5 0 01.708 0z" clip-rule="evenodd"/>
            <path fill-rule="evenodd" d="M2.5 8a.5.5 0 01.5-.5h10.5a.5.5 0 010 1H3a.5.5 0 01-.5-.5z" clip-rule="evenodd"/>
        </svg>
    </button>
    <h1 class="headers">TicTacTorus</h1>
</div>

<table id="lobbies">
    <tr><th>Lobby</th><th class="playerCount">Players</th><th class="status">Status</th><th>Description</th></tr>
    @foreach (var elem in InitLobbyList())
    {
        <tr id="lobbyRow" onclick="location.href ='game/@elem.Id';">
            <td>@elem.Name</td>
            <td class="playerCount">@elem.PlayerCount/@elem.MaxPlayerCount</td>
            <td class="status">@elem.Status</td>
            <td>@elem.Description</td>
        </tr>
    }
</table>

@functions{
    //Method that returns a iterator of all lobbies (yield return)    
    static IEnumerable<LobbyListItem> InitLobbyList()
    {
        var lobbies = LobbyListItem.GetAllLobbies();
        foreach (var elem in lobbies)
        {
            yield return elem;
        }
    }
}
